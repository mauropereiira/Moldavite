{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Moldavite",
  "version": "1.0.0",
  "identifier": "app.moldavite",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Moldavite",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https: asset: http://asset.localhost; font-src 'self' data:; connect-src 'self' https://*.googleapis.com https://accounts.google.com https://oauth2.googleapis.com https://github.com https://objects.githubusercontent.com; frame-src 'none'; object-src 'none'; base-uri 'self'",
      "assetProtocol": {
        "enable": true,
        "scope": ["$DOCUMENT/Moldavite/**", "$DOCUMENT/Moldavite/images/**"]
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJFNDcwRUFFRTdEN0U5RkUKUldUKzZkZm5yZzVIdnBGMGkvR2ZVcWJxa3o2YnpUTWszU3p0aGhNaTM1aHQ3cStmRVd5TTh1Z2MK",
      "endpoints": [
        "https://github.com/mauropereiira/Moldavite/releases/latest/download/latest.json"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app", "msi", "nsis"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "A local-first note-taking app for connected thinking",
    "longDescription": "Moldavite is a privacy-first note-taking app with rich text editing, daily notes, wiki-style linking, and calendar integration. Forged from cosmic impact.",
    "macOS": {
      "entitlements": "Moldavite.entitlements",
      "exceptionDomain": null,
      "frameworks": [],
